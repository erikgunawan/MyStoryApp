<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar_child_view"
        android:id="@+id/toolbar_view"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/img_placeholder_loading"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/btn_camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/camera"
                android:background="@drawable/btn_primary_rounded_ripple"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_gallery"
                app:flow_horizontalBias="0.5"
                app:layout_constraintTop_toBottomOf="@id/iv_photo"/>

            <Button
                android:id="@+id/btn_gallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/gallery"
                android:background="@drawable/btn_primary_rounded_ripple"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toEndOf="@id/btn_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:flow_horizontalBias="0.5"
                app:layout_constraintTop_toBottomOf="@id/iv_photo"/>

            <id.ergun.mystoryapp.common.custom.DescriptionEditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/story_description_hint"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:lines="3"
                android:importantForAutofill="no"
                android:layout_margin="16dp"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/btn_camera"
                tools:ignore="LabelFor"
                />

            <TextView
                android:id="@+id/btn_refresh_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refresh_lokasi"
                android:textColor="@color/white"
                android:paddingVertical="4dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/btn_primary_rounded_ripple"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                app:layout_constraintStart_toStartOf="@id/et_description"
                app:layout_constraintTop_toBottomOf="@id/et_description"
                app:drawableStartCompat="@drawable/ic_gps" />

            <TextView
                android:id="@+id/et_address_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/story_description_hint"
                android:background="@drawable/bg_input_default"
                android:ems="10"
                android:gravity="start|top"
                android:lines="3"
                android:importantForAutofill="no"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:enabled="false"
                app:layout_constraintTop_toBottomOf="@id/btn_refresh_location"
                tools:ignore="LabelFor"
                />

            <Button
                android:id="@+id/btn_create_story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_story"
                android:layout_margin="16dp"
                android:background="@drawable/btn_primary_ripple"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/et_address_location"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>